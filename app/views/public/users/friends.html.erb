<div class="item-list">
  <div class="item-list-header">
    <h2 class="bold">フレンド一覧</h2>
  </div>

  <div class="item-list-content">
    <div>
      <h4>オンライン</h4>
      <div class="d-flex justify-content-start">
        <% @mates.each do |user| %>
          <div class="w-25">
            <% if user.is_active? %>
              <div onclick='window.location="<%= user_path(user) %>"' role="link">
                <p><%= image_tag user.get_image(200,200), style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %></p>
                <p>
                  <%= user.name %>
                  <i class="fas fa-circle fa-xs" style="color:limegreen;"></i>
                </p>
              </div>
            <% else %>
              <div>
                <h4>オフライン</h4>
                <div onclick='window.location="<%= user_path(user) %>"' role="link">
                  <p><%= image_tag user.get_image(200,200), style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %></p>
                  <p>
                    <%= user.name %>
                    <i class="far fa-circle fa-xs" style="color:lightslategray;">
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="item-list-content">
    <ul>
      <% @users.each do |user| %>
        <% unless current_user.id == user.id %>
          <div class="each-item">
            <div class="each-item-content">
              <div class="item-content-right">
                <% if user.follow_request?(current_user, user) %>
                  <p><%= image_tag user.get_image(40,40) %></p>
                  <p><%= link_to user.name, user_path(user.id) %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
  </div>



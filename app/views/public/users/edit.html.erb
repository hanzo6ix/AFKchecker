<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2><%= @user.name %> </h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/error', resource: @user %>
      <div class="form-group">
        <%= f.label :ユーザーネーム %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :プロフィール画像 %>
        <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :自己紹介 %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "アップデート", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<%= form_with model:post, url: url do |f| %>
  <%= render 'layouts/error', resource: post %>
  <div class="flex">
    <table class="user_post_info post_form">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
       <tr>
          <td><%= f.label :start_time, "オンライン時間" %></td>
          <td><%= f.time_select :start_time %></td>
          <td><%= f.time_select :finish_time %></td>
        </tr>
        <tr>
          <td><%= f.label :genre_id, "プレイしたいゲーム" %></td>
          <td class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
          <td><%= f.label :feeling_id, "今日の気分" %></td>
          <td class="select_field"><%= f.collection_select :feeling_id, Feeling.all, :id, :feeling %></td>
        </tr>
        <tr>
          <td><%= f.label :oneword, "今日の一言" %></td>
          <td><%= f.text_field :oneword %></td>
        </tr>
      </tbody>
    </table>
    <div class="flex align-center pl5">
      <%= f.submit submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
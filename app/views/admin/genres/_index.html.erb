<table class="genre_info has_border">
  <thead>
    <tr>
      <th>タイトル名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td class="text-center"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        <td class="text-center"><%= link_to "削除", admin_genre_path(genre), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>